@page "/bookcategories/create/"

@using BooksStore.BlazorUI.Contracts
@using BooksStore.BlazorUI.ViewModels

<h3>Create Leave Type</h3>

@if (string.IsNullOrEmpty(Message) == false)
{
    <div class="alert alert-danger">
        @Message
    </div>
}

<CreateOrUpdateFormComponent ButtonText="Create" BookCategory="bookCategory" OnValidSubmit="@CreateBookCategory" />

@code {
    [Inject]
    NavigationManager _navManager { get; set; }
    [Inject]
    IBookCategoryService _client { get; set; }
    [Inject]
    IToastService toastService { get; set; }

    public string Message { get; private set; }

    BookCategoryVm bookCategory = new BookCategoryVm();

    async Task CreateBookCategory()
    {
        var response = await _client.CreateBookCategory(bookCategory);
        if(response.Success)
        {
            toastService.ShowSuccess("Book Category Created.");
            toastService.ShowSuccess("Leave Type created Successfully");
            toastService.ShowToast(ToastLevel.Info, "Test");
            _navManager.NavigateTo("/bookcategories/");
        }
        Message = response.Message;
    }
}
